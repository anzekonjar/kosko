<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kosko</title>
    <link rel="stylesheet" href="/CSS/index.css">
</head>
<body>
    <h1>Hi <%= name %></h1>
    <div class="buttons">
        <a href="/game/new">
            <button class="new">NEW GAME</button>
        </a>
        <form action="/logout?_method=DELETE" method="POST">
            <button type="submit">LOG OUT</button>
        </form>
    </div>

    <div class="games">
        <% games.forEach(game => { %>
            <div class="game_box">
                <div class="score"><%= game.result[0].score %> : <%= game.result[1].score %></div>
                <div class="title">
                    <div><%= game.result[0].name %> <span style="font-size: 11px; color: grey;">VS</span></div>
                    <div><%= game.result[1].name %></div>
                </div>
                <div class="options">
                    <form action="/game/<%= game.id %>?_method=DELETE" method="POST">
                        <button type="submit">DELETE</button>
                    </form>
                    <a class="statistika" href="/game/<%= game.id %>">STATS</a>
                </div>
            </div>
        <% }) %>    
    </div>

</body>
</html>