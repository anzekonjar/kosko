<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kosko</title>
    <link rel="stylesheet" href="/CSS/index.css">
</head>
<body>
    <h1>Hi <%= name %></h1>
    <a href="/game/new">New Game</a>

    <% games.forEach(game => { %>
        <div class="game_box">
            <div>
                <div class="title">
                    <div><%= game.result[0].name %></div>
                    <div class="score"><%= game.result[0].score %> : <%= game.result[1].score %></div>
                    <div><%= game.result[1].name %></div>
                </div>
                <a href="/game/<%= game.id %>">Statistika</a>
            </div>
        </div>
    <% }) %>

    <form action="/logout?_method=DELETE" method="POST">
        <button type="submit">Log Out</button>
    </form>
</body>
</html>